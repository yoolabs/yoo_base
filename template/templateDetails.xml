<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>yoo_base_2b</name>
	<version>2.0b</version>
	<creationDate>01/2017</creationDate>
	<author>Jannik Mewes</author>
	<authorEmail>info@yoolabs.com</authorEmail>
	<copyright>Copyright (C) 2017 YOOlabs GmbH</copyright>
	<description>YOOlabs - Base 2 beta </description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</files>
	<positions>
		<position>logo</position>
		<position>topmenu</position>
		<position>nav</position>
		<position>content-top</position>
		<position>content-bottom</position>
		<position>offcanvas</position>
		<position>footer</position>
		<position>debug</position>
	</positions>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateMode" type="list" default="default" label="Template Mode" description="" filter="word">
					<option value="default">Full Template</option>
					<option value="minimal">Minimal Template</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
